<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.library.chengxiaocai.mydemo.com.library.chengxiaocai.mydemo.ui.ScrollActivity">

    <LinearLayout

        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="100px"
            android:padding="20px"
            android:text="测试" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="100px"
            android:padding="20px"
            android:text="测试2" />
    </LinearLayout>


    <Button
        android:id="@+id/scrollTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="滚动To" />

    <Button
        android:id="@+id/scrollBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="滚动By" />

    <com.library.chengxiaocai.mydemo.com.library.chengxiaocai.mydemo.ui.SimplePullView
        android:id="@+id/pullView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <View
            android:layout_width="50px"
            android:layout_height="50px"
            android:background="@color/colorPrimary"></View>

    </com.library.chengxiaocai.mydemo.com.library.chengxiaocai.mydemo.ui.SimplePullView>

</LinearLayout>
